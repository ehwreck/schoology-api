{
    "files": [
        "./src/index.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2019",
            "DOM"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "incremental": true,
        "allowUnreachableCode": false
    },
}